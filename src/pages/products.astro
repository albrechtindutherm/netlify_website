    }

    .carousel-container {
        width: 100%;
        height: 100%;
    }

    .carousel-item {
        display: none;
        padding: 2rem;
        width: 100%;
    }

    .carousel-item.active {
        display: block;
    }

    /* Specifications Card */
    .specs-card {
        background-color: white;
        border-radius: 8px;
        padding: 2rem;
    }

    .specs-icon {
        color: #0056b3;
        margin-bottom: 1.5rem;
    }

    .specs-card h2 {
        color: #0056b3;
        font-weight: 600;
        margin-bottom: 1.5rem;
        font-size: 1.8rem;
    }

    .spec-group {
        margin-bottom: 1.5rem;
    }

    .spec-group h3 {
        color: #0056b3;
        font-size: 1.3rem;
