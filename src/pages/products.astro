        margin: 0 auto;
    }

    .cta-box h3 {
        font-size: 1.8rem;
        margin-bottom: 1rem;
    }

    .cta-box p {
        margin-bottom: 1.5rem;
        font-size: 1.1rem;
        opacity: 0.9;
    }

    .cta-button {
        display: inline-block;
        background-color: white;
        color: #0056b3;
        padding: 0.8rem 2rem;
        border-radius: 4px;
        font-weight: 600;
        text-decoration: none;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .cta-button:hover {
        transform: translateY(-2px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    /* Responsive Design */
    @media (max-width: 900px) {
        .product-card {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }

        .product-image {
            width: 100%;
            max-width: 300px;
            height: auto;
            aspect-ratio: 1/1;
        }
    }

    @media (max-width: 768px) {
        .hero {
            padding: 3rem 0;
        }

        .hero h2 {
            font-size: 2rem;
        }

        .carousel {
            min-height: 650px;
        }
    }

    @media (max-width: 480px) {
        .carousel-item {
            padding: 1rem;
        }
    }
</style>
</Layout>